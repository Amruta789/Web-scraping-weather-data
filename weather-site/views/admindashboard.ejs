<!DOCTYPE html>
<html>
    <head>
        <title>Admin Dashboard</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
            function toggleAppearance(x){
                var dataDiv = document.getElementById(x);
                if(dataDiv.style.display === "none"){
                    dataDiv.style.display = "block";
                }else{
                    dataDiv.style.display = "none";
                }
            }
        </script>
        
        <style>
            table, th, td {
                border: 1px solid black;
            }
        </style>
    </head>
    <body>
        <%- include navbaradmin.ejs %>
        <h1>Welcome, Admin!!!</h1>
        <h1>Admin Dashboard</h1>
        <button onclick="window.location.assign('/signup')">Insert</button>
        <button onclick="toggleAppearance('updaterecord'); toggleAppearance('outputmessage')">Update</button>
        <button onclick="toggleAppearance('deleterecord'); toggleAppearance('outputmessage')">Delete</button>
        <button onclick="toggleAppearance('onerecordinput')">View single record</button>
        <button onclick="window.location.assign('/admindashboard/messages')">Show all messages</button>
        <button onclick="window.location.assign('/admindashboard/users')">View All Details</button>
        
        <div id="onerecordinput" style="display:none">
            <form id="viewone" action="/admindashboard/viewone" method="POST" onsubmit="toggleAppearance('onerecord')">
                <label for="username">Username:</label>
                <input type="text" name="username" id="username" ><br><br>
                <input type="submit" value="View Details">
            </form>
        </div>
        <div id="updaterecord" style="display:none">
            <form id="update" action="/admindashboard/update" method="POST">
                <label for="username">Username:</label>
                <input type="text" name="username" id="username" ><br><br>
                <label for="column">Select column name:</label>
                <select name="key" id="column">
                    <option value="username">Username</option>
                    <option value="email">Email address</option>
                    <option value="phone">Phone number</option>
                </select><br><br>
                <label for="newvalue">Enter new value:</label>
                <input type="text" name="newvalue" id="newvalue"><br><br>
                <input type="submit" value="Submit">
            </form>
        </div>
        
        <div id="deleterecord" style="display:none">
            <form action="/admindashboard/delete" method="POST">
                <label for="username">Username:</label>
                <input type="text" name="username" id="username" >
                <input type="submit" value="Delete">
            </form>
        </div>
        <div id="outputmessage" style="display:none">
            <% if(success){ %>            
                <span class="alert alert-success" role="alert"><%= success %></span><br><br>
            <% } else if(error){ %>            
                <span class="alert alert-warning" role="alert"><%= error %></span><br><br>
            <% } %>
        </div>
        <div id="onerecord">
            <% if(values){ %>
                <%- include userdetails.ejs %>
            <% } %>
        </div>
        <div>
            <% if(allmessages){ %>
                <%- include messages.ejs %>
            <% } %>
        </div>
        
    </body>
