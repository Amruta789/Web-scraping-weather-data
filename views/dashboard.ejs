    <body>        
        <%- include navbar.ejs %>
        
        <div class="card" id="profilepic">
            <img id="UploadedImg" class="card-img-top" src="data:<%= mime %>;base64, <%= img %>" alt="profilepicture" >
            <form enctype="multipart/form-data">
                <input class="btn btn-primary btn-sm" type="file" name="profilepicture" id="profilepicture" accept="image/png, image/jpeg">
                <input class="btn btn-primary btn-sm profile-submit" type="submit" id="submit" value="Submit">
            </form>
            <div class="card-body" style="color: black;">
                <h5 class="card-title"><%= username %></h5>
                <p class="card-text"><%= email %></p>
                <p class="card-text"><%= phone %></p>
                <button class="btn btn-primary" onclick="window.location.assign('/changepassword')">Change Your Password</button>
            </div>
        </div>
        
        <div class="footer">
            <div id="contactform">
                <div class="container">
                    <form action="/dashboard/message" method="POST">
                        <div class="form-group">
                            <label for="message">We'd love to hear from you!</label>
                            <textarea class="contact form-control" name="message" id="message" placeholder="Type your message here..." cols="50" rows="3"></textarea><br><br>
                        </div>
                        
                        <input class="btn btn-primary" type="submit" value="Contact Us">
                    </form>
                </div>   
            </div>
        </div>

    </body>
